.container{
    display:flex;
    flex-direction: column;
}
.header-image{
    width: 100%;
    height:460rpx;
}
.author-data{
    display: flex;
    margin-left: 30rpx;
    margin-top:20rpx;
}
.avatar{
    width: 64rpx;
    height: 64rpx;
    vertical-align: middle;
    border-radius: 50%;
}
.authorname{
    font-size: 30rpx;
    font-weight: 300;
    margin-left: 20rpx;
    line-height: 64rpx;
    color:#666;
}
.const-text{
    font-size: 24rpx;
    color:#999;
    margin-left:20rpx;
    line-height: 64rpx;
}
.date{
    font-size: 24rpx;
    margin-left: 30rpx;
    color:#999;
    line-height: 64rpx;
}
.title{
    margin-left: 40rpx;
    font-size: 36rpx;
    font-weight: 700;
    margin-top: 30rpx;
    letter-spacing: 2px;
    color:#4b556c;
}
.tool{
    margin-top: 20rpx;
}
.circle{
    float:right;
    margin-right: 40rpx;
    vertical-align: middle;
}
.circle image {
    display: inlin-block;
    width: 90rpx;
    height:90rpx;
    border-radius: 50%;
}
.share-img{
    margin-left:30rpx;
}
.horizon{
    width: 660rpx;
    height: 1px;
    background: #e5e5e5;
    vertical-align: middle;
    position: relative;
    top:46rpx;
    margin:0 auto;
    z-index: -99;
}
.detail{
    color:#666;
    margin: 20rpx 30rpx 0 30rpx;
    line-height: 44rpx;
    letter-spacing: 2px;
    font-size:24rpx;
}